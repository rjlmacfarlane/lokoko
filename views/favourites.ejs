<!DOCTYPE html>
<html lang="en">
  <header>
    <%- include('partials/_header') %>
  </header>

<head>
  <title>
  	Favourites
  </title>

  <link rel="stylesheet" href="/vendor/normalize-4.1.1.css" type="text/css" />
  <link rel="stylesheet" href="/vendor/border-box.css" type="text/css" />
  <link rel="stylesheet" href="/styles/layout.css" type="text/css" />
  <link rel="stylesheet" href="/styles/favourites.css" type="text/css" />

  <script type="text/javascript" src="/vendor/jquery-3.0.0.js"></script>
  <script type="text/javascript" src="/scripts/app.js"></script>
</head>

<body>
  <div id="load-fav-section">
  <% for(let favourite of favourites) {%>
    <div id="fav-container">
      <div id="fav-left">
        <img id="main-photo" src="<%= favourite['main_photo_url'] %>" alt="main-photo" />
      </div>
      <div id="fav-right">
        <span><%= favourite['title'] %></span>
        <span>$<%= favourite['price'] %></span>
      </div>
      <div id="fav-bottom">
        <span><%= favourite['posted_date'] %></span>
        <button class="fav-button" type="button" value="<%= favourite['id'] %>">Remove</button>
      </div>
    </div>
  <% } %>
  </div>
</body>
</html>
